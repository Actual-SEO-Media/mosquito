{% if posts|length > 0 %}
  <ul class="results">
    {% for post in posts  %}
      <li class="result boxRadius boxShadow boxPadding" data-theme="reset">
        <article class="post">
          <a href="{{ post.link }}" aria-label="{{ post.title }}" class="post-link">
            <h2 class="h3">{{ post.title }}</h2>
            <p>{{ post.excerpt.read_more(false) }}</p>
            <footer class="post-footer">
              <span class="button button--link" aria-hidden="true">{{ labels.readMore }}</span>
            </footer>
          </a>
        </article>
      </li>
    {% endfor %}
  </ul>
{% else %}
  <div class="noResults boxPadding">
    <p>{{ labels.noResults }}</p>
  </div>
{% endif %}
