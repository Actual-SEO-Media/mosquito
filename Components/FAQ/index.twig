<flynt-component name="FAQ" load:on="visible">
    <div class="faq" data-ref="faq">
        <div class="faq-container">
            <div class="faq-sidebar">
                {% for category in categories %}
                    <div class="faq-tab{% if loop.first %} faq-tab-active{% endif %}" data-category-index="{{ loop.index0 }}">
                        {{ category.categoryTitle }}
                    </div>
                {% endfor %}
            </div>
            <div class="faq-content-area">
                {% for category in categories %}
                    <div class="faq-category{% if loop.first %} faq-category-active{% endif %}" data-category-index="{{ loop.index0 }}">
                        {% for item in category.items %}
                            <div class="faq-item">
                                <div class="faq-title">
                                    <h5>{{ item.title }}</h5>
                                    <span class="faq-plus"></span>
                                </div>
                                <div class="faq-content">
                                    {{ item.content|e('wp_kses_post') }}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</flynt-component>