<flynt-component load:on="idle" load:on:media="(min-width: 1024px)" data-theme="dark" name="NavigationMain">
  <div class="navigation-wrapper">
    {% include 'Partials/_top_bar.twig' %}
    <nav class="navigation" aria-label="{{ labels.ariaLabel|e }}">
      <div class="container">
        {% include 'Partials/_logo.twig' with {'logo': logo, 'site': site} only %}
        {% if menu %}
          {% include 'Partials/_menu.twig' with {'items': menu.items} only %}
        {% endif %}
      </div>
    </nav>
  </div>
</flynt-component>